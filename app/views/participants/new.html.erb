
<%= form_for(@participant) do |f| %>
    <% if @participant.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@participant.errors.count, "error") %> prohibited this participant from being saved:</h2>

          <ul>
            <% @participant.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <ul>
      <li id="fname-container">
        <%= f.text_field :first_name, hide_label: true, placeholder: 'First Name' %>
      </li>
      <li id="lname-container">
        <%= f.text_field :last_name, hide_label: true, placeholder: 'Last Name' %>
      </li>
      <li id="email-container">
        <%= f.email_field :email, hint: 'yes!', hide_label: true, placeholder: 'Email Address' %>
      </li>
      <li id="country-container">
        <%= f.country_select :country_code, ["United States"], class: 'form-control dropdown' %>
      </li>
    </ul>
    <%= fields_for :microsite do |builder| %>
        <%= builder.hidden_field :name %>
    <% end %>
    <div class="actions">
      <%= button_tag(type: 'submit', id: 'signup_prompt', class: "btn btn-primary btn-lg") do %>
          SIGN THE DECLARATION <span class="glyphicon glyphicon-expand"></span>
      <% end %>
    </div>
<% end %>